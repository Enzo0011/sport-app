{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <h3>Événements</h3>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.latitude }}</td>
                    <td>{{ event.longitude }}</td>
                    <td>{{ event.date|date('d-m-Y') }}</td>
                    <td>
                        <a href="{{ path('app_event_show', {id: event.id}) }}">Détails</a>
                        <a href="{{ path('app_add_participant', {id: event.id}) }}">Ajouter un Participant</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun participant</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
